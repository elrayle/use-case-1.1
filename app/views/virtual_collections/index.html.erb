  <h2 class="hide-text">Items in selected virtual collection</h2>
  <div id="documents">

<% @selected_collection[:display_items].each do |item| %>
    <div class="document blacklight-book clearfix" data-bibid="<%= item[:bib_id] %>">
      <div class="iconcover bookcover" id="OCLC:<%= item[:oclc_id] %>" data-oclc="<%= item[:oclc_id] %>">
        <img class="img-polaroid" src="/assets/cornell/layout/placeholder-item.png" alt="">
        <i class="fa fa-book"></i>
      </div>

      <div class="document-data">
        <div class="select-item">      <form accept-charset="UTF-8" action="/bookmarks/<%= item[:bib_id] %>" class="list_toggle" data-doc-id="<%= item[:bib_id] %>" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" /><input name="authenticity_token" type="hidden" value="SFvdTxMhxExByZSU55gKELLYp9BpfIHYGZ87S/40wDU=" /></div>
          <input class="bookmark_add" id="bookmark_toggle_<%= item[:bib_id] %>" name="commit" type="submit" value="Select" />
        </form>
        </div>

        <h2 class="blacklight-title_display">
          1.

          <a href="/catalog/<%= item[:bib_id] %>" data-counter="1"><%= item[:title] %></a>
          <span class="blacklight-pub_date_display"><%= item[:pub_date] %></span>
        </h2>



        <span class="blacklight-title_uniform_display"></span>

        <div class="data-block">
          <span class="blacklight-author_display"><%= item[:author] %></span>
          <span class="format"><i class="fa fa-book"></i> <%= item[:format] %></span>
          <span class="blacklight-pub_info_display"><%= item[:pub_info] %></span>
          <span class="blacklight-language_display"><%= item[:language] %></span>
          <span class="blacklight-edition_display"><%= item[:edition] %></span>
        </div>


        <div id="blacklight-avail-<%= item[:bib_id] %>" class="status">
          <span class="preloader">Checking availability</span>
        </div>
        <abbr class="unapi-id" title="<%= item[:bib_id] %>"></abbr>

      </div>
    </div>
<% end %>
